@model TheaterCreateVM

<div style="margin-left: 100px; margin-top: 50px" class="container-fluid">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" style="width: 40%" placeholder="Enter Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Location</label>
            <input asp-for="Location" class="form-control" style="width: 40%" placeholder="Enter Location">
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">TotalSeats</label>
            <input asp-for="TotalSeats" class="form-control" style="width: 40%" placeholder="Enter TotalSeats">
            <span asp-validation-for="TotalSeats" class="text-danger"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button type="submit" class="btn btn-primary">Create</button>
        <button asp-action="" class="btn btn-warning">Cancel</button>
    </form>
</div>
