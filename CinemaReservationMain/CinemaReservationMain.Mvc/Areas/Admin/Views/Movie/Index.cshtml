@model List<MovieGetVM>

@{
	int count = 0;
}

<div class="main-panel">
	<div class="content-wrapper">
		<div class="row">

			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Movie Table</h4>
						<a asp-action="create" class="btn btn-success">Create</a>

						<div class="table-responsive">
							<table class="table table-striped">
								<thead>
									<tr>
										<th>
											No
										</th>
										<th>
											Title
										</th>
										<th>
											Genre
										</th>
										<th>
											Rating
										</th>
										<th>
											Duration
										</th>
										<th>
											Actions
										</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var gnr in Model)
									{
										count++;
										<tr>
											<td class="py-1">
												@count
											</td>
											<td>
												@gnr.Title
											</td>
											<td>
												@gnr.Genre
											</td>
											<td>
												@gnr.Rating
											</td>
											<td>
												@gnr.Duration min
											</td>
											<td>
												<a asp-action="Update" asp-route-id="@gnr.Id" class="btn btn-primary">edit</a>
												<a asp-action="Delete" asp-route-id="@gnr.Id" class="btn btn-danger">remove</a>
											</td>

										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>