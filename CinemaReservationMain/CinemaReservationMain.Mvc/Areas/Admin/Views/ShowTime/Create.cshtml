@model ShowTimeCreateVM

@{
    List<MovieGetVM> movies = ViewBag.Movies;
    List<TheaterGetVM> theaters = ViewBag.Theaters;
}

<div style="margin-left: 100px; margin-top: 50px" class="container-fluid">
    <form method="post">
        <div class="mb-4 col-md-3">
            <label class="form-label">Movie</label>
            <select class="form-control" asp-for="MovieId" asp-items="@(new SelectList(movies, "Id", "Title"))">
                <option selected disabled>choose movie</option>
            </select>
            <span asp-validation-for="MovieId" class="text-danger"></span>
        </div>
        <div class="mb-4 col-md-3">
            <label class="form-label">Theater</label>
            <select class="form-control" asp-for="TheaterId" asp-items="@(new SelectList(theaters, "Id", "Name"))">
                <option selected disabled>choose theater</option>
            </select>
            <span asp-validation-for="TheaterId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">StartTime</label>
            <input asp-for="StartTime" class="form-control" style="width: 40%" placeholder="Enter StartTime">
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">EndTime</label>
            <input asp-for="EndTime" class="form-control" style="width: 40%" placeholder="Enter EndTime">
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button type="submit" class="btn btn-primary">Create</button>
        <button asp-action="" class="btn btn-warning">Cancel</button>
    </form>
</div>
