@model MovieCreateVM

<div style="margin-left: 100px; margin-top: 50px" class="container-fluid">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input asp-for="Title" class="form-control" style="width: 40%" placeholder="Enter Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Genre</label>
            <input asp-for="Genre" class="form-control" style="width: 40%" placeholder="Enter Genre">
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Rating</label>
            <input asp-for="Rating" class="form-control" style="width: 40%" placeholder="Enter Rating">
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Duration</label>
            <input asp-for="Duration" class="form-control" style="width: 40%" placeholder="Enter Duration with mins">
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Desc</label>
            <input asp-for="Desc" class="form-control" style="width: 40%" placeholder="Enter desc">
            <span asp-validation-for="Desc" class="text-danger"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button type="submit" class="btn btn-primary">Create</button>
        <button asp-action="" class="btn btn-warning">Cancel</button>
    </form>
</div>
